.delete-task {
    display: none;
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(135, 153, 171, 0.6);

    .delete-task-box {
        width: 30%;
        padding: 1% 0;
        margin: 12% auto;
        background-color: white;
        border-radius: 10px;
        color: #283848;

        .img-trash {
            width: 30%;
            margin: 4% auto;
            text-align: center;
            background-color: #edf6fc;
            padding: 5% 0;
            border-radius: 50%;

            img {
                width: 70px;
                height: 80px;
            }
        }

        h2, h4 {
            text-align: center;

            span {
                color: red;
            }
        }

        h4 {
            margin: 5px 0;
            font-weight: bold;
            color: #475e78;
        }

        .delete-options {
            width: 80%;
            margin: 5% auto;
            // background-color: black;
            text-align: center;

            .delete-option {
                margin: 0 2%;

                button {
                    width: 120px;
                    height: 40px;
                    border: 0;
                    border-radius: 5px;
                    cursor: pointer;
                    color: white
                    font-weight: bold;
                }

                .cancel {
                    background-color: #1ad18f;
                }

                .confirm {
                    background-color: #ff4874;
                }
            }
        }
    }
}

