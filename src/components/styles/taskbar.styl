.task-bar {
    display: flex;
    position: relative;
    width: 100;
    background-color: white;
    border-radius: 5px;
    margin: 2% 0;
    padding: 2%;
    box-shadow: 0px 0px 0px 0.5px #e4f0f8;

    .check-box {
        width: 40px;
        height: 40px;
        background-color: #E9F4FB;
        border-radius: 5px;
        cursor: pointer;
    }

    .task-title {
        align-self: center;
        margin: 0 10px;
        font-size: 1rem;
        width: 70%;

        h2 {
            color: #283848;
        }
    }

    .task-categorie {
        text-align: right;
        align-self: center;
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
    }

    .categorie-urgent {
        background-color: #FF2E79;
    }

    .categorie-important {
        background-color: #ffc42e;
    }

    a {
        width: 10px;
        height: 30px;
        align-self: center;
        margin-left: auto;
        // background-color: cyan
        background-image: url('../../assets/task-options.png');
        background-size: cover;
        background-position: center;
        cursor: pointer;
        transition: 0.5s;
    }

    a:hover {
        .nav-task {
            display: block;
        }
    }
}

.checked {
    transition: 0.2s;
    opacity: 0.5;
    z-index: 99;

    .check-box {
        background-color: white;
        background-image: url('../../assets/checked-icon.png');
        background-size: cover;
    }

    .task-title {
        text-decoration: line-through;
    }

    .categorie-urgent {
        background-color: #f491ba;
    }
}

.nav-task {
    width: 140px;
    height: 90px;
    background-color: rgba(250, 250, 250, 1);
    position: absolute;
    display: none;
    top: 10px;
    right: 10px;
    border-radius: 10px;
    z-index: 999;
    box-shadow: 11px 11px 10px -10px rgba(143, 116, 143, 1);

    .edit-option, .remove-option {
        width: 100%;
        display: flex;
        padding:5% 10%;
        color: #283848;

        .pointer {
            width: 15px;
            height: 15px;
            background-color: #5ecda5;
            align-self: center;
            margin-right: 10px;
            border-radius: 50%;
        }

        p {
            font-size: 1.1rem;
            align-self: center;
            // margin: 0 auto;
        }

        .img-nav {
            width: 10%;
            float: right;
            // background-color: blue;
            margin-left: auto;
        }
    }

    .edit-option:hover, .remove-option:hover {
        transition: 0.2s;
        background-color: #E9F4FB;
    }

    .remove-option {
        width: 100%;

        .pointer {
            background-color: #d6e6ef;
        }
    }
}