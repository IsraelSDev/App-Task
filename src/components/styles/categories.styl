.container-categories {
    width: 15%;
    box-shadow: 3px 0px 5px 0px rgba(232, 232, 232, 1);
    display: flex;
    background-color: #F4FBFF;

    .categories-wraper {
        align-self: center;
        width: 80%;
        margin: 0 auto;

        .categories-title {
            padding-bottom: 30%;
            font-size: 1.2rem;
            opacity: 0.6;
        }

        .categories-list {
            font-size: 1.1rem;

            ul {
                width: 100%;
                // background-color: black;
                list-style-position: inside;
                list-style-image: url('../../assets/arrow-list.png');

                .mark-urgent, .mark-important {
                    padding: 2px 8px;
                    font-size: 0.8rem;
                    border-radius: 50%;
                    color: white;
                    text-align: center;
                    background-color: #f90059;
                }

                .mark-important {
                    background-color: #ffc42e;
                }

                li {
                    cursor: pointer;
                    margin: 15% 0;
                    font-weight: bold;
                    font-size: 1rem;
                    color: #2b3b4b;

                    a {
                        text-decoration: none;
                    }
                }

                li:hover {
                    transition: 0.2s;
                    color: #2693FF;
                    list-style-image: url('../../assets/arrow-list-blue.png');
                }
            }
        }
    }
}

.active {
    list-style-image: url('../../assets/arrow-list-blue.png');

    a {
        color: #2693FF;
    }
}