.navbar {
    width: 100%;
    height: 100px;
    position: absolute;
    z-index: 900;
    background-color: white
    border: 0;
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.2);

    .nav-wraper {
        width: 30%;
        float: right;
        display: flex;
        justify-content: flex-end;
        padding: 1% 2%;
    }

    .pic {
        width: 50px;
        height: 50px;
        background-image: url("../../assets/pic.png");
        background-size: contain
        border-radius: 50%;
        margin-right: 10px;
    }

    .description {
        align-self: center;
        text-align: left;
        h4{
            font-size: 1.2rem
        }
        p {
            color: #2693FF;
            font-weight: bold;
            font-size: 0.9rem;
        }
    }
}
